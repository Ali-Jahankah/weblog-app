<% if(posts.length>0){ %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0"></div>
  </div>

  <h2>Section title</h2>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Date</th>
          <th scope="col">Status</th>
          <th scope="col">Test</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i of posts){ %>
          <tr>
            <td>1</td>
            <td><a href="/blogs/<%= i._id %> ">
                <%= i.title %>
              </a></td>
            <td>
              <%= i.createdAt %>
            </td>
            <td>
              <span class="badge <%= i.status==="public" ? 'bg-success' :'bg-danger' %> ">
             <%= i.status  %> 
              </span>
            </td>
            <td>text</td>
            <td><a href="/dashboard/edit-post/<%= i._id %>" class="btn btn-warning">Edit</a></td> 
            <td><a href="/dashboard/delete-post/<%= i._id  %>" class="btn btn-danger">Delete</a></td>
          </tr>
          <% } %>
      </tbody>
    </table>
   
  </div>
<%- include("../includes/pagination.ejs") %> 
  <% }else{ %>
    <div class="text-center mt-4">
      <h1>There is no post yet!</h1>
    </div>

    <% } %>