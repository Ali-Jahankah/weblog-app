<h3 class="mt-2 text-center">Edit Post</h3>
<div class="w-50 mx-auto"><%- include("../includes/errorMessages.ejs") %></div>
<div class="d-flex align-items-center justify-content-center">
  <form action="/dashboard/edit-post" class="w-50" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control w-50"
        name="title"
        id="title"
        value="<%= post.title  %> "
      />
    </div>

    <div class="form-group mt-4">
      <label for="status">Status</label>
      <select name="status" class="form-control w-25" id="status">
        <option value="<%= post.status  %> " selected><%= post.status%></option>
        <option value="<% post.status==="privet"?"public":"privet" %> "><%= post.status==="public"?"privet":"public"  %> </option>
      </select>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <button
          class="btn btn-sm btn-outline-secondary"
          type="button"
          id="imageUpload"
        >
          upload
        </button>
      </div>
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="selectedImage" />
        <label id="imageStatus" class="custom-file-label" for="selectedImage">
          Choose your favourite photo
        </label>
      </div>
      <p class="mt-3" id="imageLink">Image Link will appear here...</p>
    </div>
    <div id="progressDiv" style="display: none">
      <div class="progress">
        <div
          id="progressBar"
          class="progress-bar progress-bar-striped progress-bar-animated"
          role="progressbar"
          aria-valuemax="100"
          aria-valuemin="0"
        ></div>
      </div>
    </div>
    <div class="form-group mt-4">
      <h5>Text Here...</h5>
      <textarea name="body" class="form-control" id="body">
<%= post.body  %> </textarea
      >
    </div>

    <div class="row mt-4">
      <input type="submit" value="Submit" class="btn btn-success m-2" />
      <a href="/dashboard" class="btn btn-warning m-2">Cancel</a>
    </div>
  </form>
</div>
